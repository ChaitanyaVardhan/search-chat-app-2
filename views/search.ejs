<!doctype html>
<html lang="en">
<head>
  	<meta charset="utf-8">
	<title>Search and Chat :: Search Results</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">
	<link rel="stylesheet" href="/custom.css">
	<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container-fluid">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/home">Search Chat App</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/home">Home</a></li>
            <li><a href="/search">Search</a></li>
            <li><a href="/chat">Chat</a></li>
            <li><a href="/logout">Logout</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

<form class="form-inline" method="post" action="/searchresult">
  <div class="form-group">
    <label class="sr-only" for="min_amt">Email address</label>
    <input type="text" class="form-control" name="min_amt" placeholder="Min Amount" required>
  </div>
  <div class="form-group">
    <label class="sr-only" for="max_amt">Password</label>
    <input type="text" class="form-control" name="max_amt" placeholder="Max Amount" required>
  </div>
  <button type="submit" class="btn btn-success">Search</button>
</form>

<!--
<% if (data.length == 0) { %>
<p>Sorry No Search Results!!!</p>
<% } %>
-->
<% if (data.length > 0) { %>
<table class="table table-striped">
	<thead>
		<th>Name</th>
		<th>Employees</th>
		<th>Category</th>
		<th>City</th>
		<th>State</th>
		<th>Date of Funding</th>
		<th> Amount Raised</th>
		<th>Currency</th>
		<th>Round</th>
	</thead>
	<tbody>
<% for(var i = 0; i < data.length; i++) { %>
		<tr>
		<td><%= data[i].company %></td>
		<td><%= data[i].numEmps %></td>
		<td><%= data[i].category %></td>
		<td><%= data[i].city %></td>
		<td><%= data[i].state %></td>
		<td><%= data[i].fundedDate %></td>
		<td><%= data[i].raisedAmt %></td>
		<td><%= data[i].raisedCurrency %></td>
		<td><%= data[i].round %></td>
		</tr>
<% } %>
	</tbody>
</table>
<% } %>
</div>
</body>
</html>
